import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner in = new Scanner (System.in);
        int N,hour,minutes,seconds = 0;
        N=in.nextInt();
         hour=N/3600;
        N = N- (hour * 3600);
        minutes=N/60;
        N = N - (minutes * 60);
        
        System.out.println(hour+":"+minutes+":"+N);
    }
    
}
