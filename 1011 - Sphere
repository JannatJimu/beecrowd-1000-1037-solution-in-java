import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
        // TODO code application logic here
        Scanner in = new Scanner (System.in);
        int R= in.nextInt();
        double VOLUME =(4/3.0)*(3.14159)*R*R*R;
        System.out.printf("VOLUME = %.3f\n",VOLUME);
    }
}
