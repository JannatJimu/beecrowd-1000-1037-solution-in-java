import java.util.Scanner;
public class Main {

   
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner in =new Scanner (System.in);
        int NUMBER ;
        int hour;
        NUMBER=in.nextInt();
        hour=in.nextInt();
        double amount=in.nextDouble();
        double SALARY=hour*amount;
